      <div class="col-md-12 text-center pt-5"><h1>ADD Article</h1></div>
      <div class="container pt-5">
         <form enctype="multipart/form-data" method="POST" action="add-article">
            <div class="form-group mb-3">
               <label for="exampleInputTitle">Title</label>
               <input
                  type="text"
                  class="form-control"
                  name="title"
                  id="exampleInputtitle1"
                  aria-describedby="titleHelp"
                  placeholder="Enter Title"
               />
            </div>

            <div class="form-group mb-3">
               <label for="exampleInputEmail1">Content</label>
               <textarea
                  class="form-control"
                  id="exampleFormControlTextarea1"
                  rows="3"
                  name="content"
               ></textarea>
            </div>

            <div class="form-group mb-3">
               <label for="exampleFormControlFile1">Update Gambar</label>
               <input
                  type="file"
                  name="image"
                  class="form-control-file"
                  id="exampleFormControlFile1"
               />
            </div>

            <div class="form-group">
               <select class="custom-select" name="category">
                  <option selected>Categories</option>
                  <% if (categories.length > 0) {%>
                      <% for(let i = 0 ; i < categories.length; i++) { 
                        var selected = ( categories[i].id == artikel[0].category_id) ? "selected" : "";
                        %>
                        <option value="<%= categories[i].id%>" <%= selected%>  >
                        <%=categories[i].categoryname %> 
                      
                  </option>
                  <% } %> <% } %>
               </select>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
         </form>
      </div>

